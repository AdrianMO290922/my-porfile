---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={Astro.props.description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title}</title>
	</head>
	<body>
		<div class="fixed inset-0 -z-10 min-h-screen w-full bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#00091d_1px)] bg-[size:20px_20px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_70%,transparent_100%)]">
		</div>
		<div class="relative">
			<Header />
			<slot />
			<Footer />
		</div>
	</body>
</html>

<style is:global>
	:root{
		color-scheme: light dark;

	}
	section[id] {
        scroll-margin-top: 100px;
	}
	html{
		font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji";
		line-height: 1.5;
		scroll-behavior: smooth;
		
		
	}
	body {
		display: flex;
		flex-direction: column; 
		min-height: 100vh;
		overflow-x: hidden;
		background: transparent;
		
		
	}
	@media (prefers-reduce-motion: reduce) {
		* {
			scroll-behavior: auto;
		}
	}
</style>
