---
interface Props {
    title: string;
    imageUrl: string;
    projectUrl: string;
    description?: string;
}

const { title, imageUrl, projectUrl , description} = Astro.props;
---

<div class="h-auto min-h-[480px] sm:min-h-[500px] lg:min-h-[550px] justify-center items-center flex flex-col w-full sm:w-96 py-6 sm:py-8 px-4 sm:px-6 gap-4 sm:gap-6 rounded-2xl sm:rounded-3xl bg-gradient-to-br from-white/5 via-white/10 to-white/5 backdrop-blur-sm hover:from-white/10 hover:via-white/15 hover:to-white/10 transition-all duration-300">
    <section class="w-full">
          <img src={imageUrl} alt={`Imagen del proyecto ${title}`}
          class="w-full h-40 sm:h-52 object-cover rounded-lg sm:rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300"/>
    </section>
    <section class="text-white text-center px-2 sm:px-4 flex-grow flex flex-col justify-between">
         <div>
           <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold leading-tight">{title}</h1>
           <p class="text-xs sm:text-sm p-2 sm:p-4 opacity-90 line-clamp-3">{description}</p>
         </div>
         <button class="bg-white/5 border-2 border-white py-2 px-4 rounded-lg sm:rounded-xl mt-4 sm:mt-6 font-medium text-sm sm:text-base hover:bg-white hover:text-gray-800 hover:border-white transition-all duration-300 transform hover:scale-105">
         <a href={projectUrl} target="_blank" rel="noopener noreferrer">Ver m√°s</a></button>
    </section>
</div>