---
interface Props{
    title:string;
    imgUrl:string;
    projectUrl:string;
}
const {title,imgUrl,projectUrl} = Astro.props;
---


<div class="h-[350px] justify-center items-center flex flex-col  w-96 py-50 
gap-6 rounded-3xl hover:scale-105 transition-transform
bg-gradient-to-tr from-white/5 via-white/10 to-white/5">
    <section class="">
          <img src={imgUrl} alt="Imagen del proyecto"
          class="w-90 h-52 object-cover rounded-lg shadow-lg mask-radial-from-70%"/>
    </section>
    <section class="text-white text-center">
         <h1 class="text-3xl font-bold">{title}</h1>
         <button class=" bg-white/5 border-2 border-white py-2 px-4 rounded mt-10
         hover:bg-white hover:text-gray-800 transition-all duration-300">
         <a href={projectUrl}>Ver m√°s</a></button>
    </section>
       
      
</div>